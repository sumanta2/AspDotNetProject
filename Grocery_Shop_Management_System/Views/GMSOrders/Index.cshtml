@model IEnumerable<Grocery_DAO.order>

@{
    ViewBag.Title = "Index";
}
<style>
    .orderList {
        height: 84vh;
        background-image: Url('../../Content/Images/homeImage.jpg');
        background-size: cover;
        overflow-y: scroll;
    }
</style>

<div class="orderList">
    <h2 class="text-center">Order List</h2>
    @if (Model.Count() == 0)
    {
        <h2>No Order Found</h2>
    }
    else
    {
        <table class="table table-striped table-hover" style="background-color: rgb(245 153 194 / 71%);">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.user.firstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.product.productName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quantity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.total)
                </th>
                @if (Session["userType"] != null && Session["userType"].ToString() == "seller")
                {
                    <th></th>
                }

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.user.firstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.product.productName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.total)
                    </td>
                    @if (Session["userType"] != null && Session["userType"].ToString() == "seller")
                    {
                        <td>

                            @Html.ActionLink("Delete", "Delete", new { id = item.orderId }, new { @class = "btn btn-danger" })
                        </td>
                    }
                </tr>
            }

        </table>
    }

</div>
