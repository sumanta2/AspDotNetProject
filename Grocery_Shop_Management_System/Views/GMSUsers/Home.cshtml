@{
    ViewBag.Title = "HomePage";
}
<style>
    .homeStyle {
        background-image: url('../../Content/Images/homeImage.jpg');
        height: 90vh;
        background-size: cover;
    }
    .msg {
        background-color:rgb(245 153 194 / 41%);
        padding: 15px;
        border-radius: 20px;
        color: green;
    }
</style>


<div class="homeStyle">
    <div class="text-center m-5 mt-0">
        @Html.ActionLink("Loged In", "LogedIn", null, new { @class = "btn btn-info btn-lg m-3" })
        @Html.ActionLink("Register", "Create", null, new { @class = "btn btn-primary btn-lg m-3" })
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6 overlay">
            <h1 class="text-center msg">Welcome to Grocery Store Management System</h1>
        </div>
    </div>
</div>
