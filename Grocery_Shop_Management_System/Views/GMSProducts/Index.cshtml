@model IEnumerable<Grocery_DAO.product>


@{
    ViewBag.Title = "Index";
}

<style>
    .productList {
        height: 84vh;
        background-image: Url('../../Content/Images/homeImage.jpg');
        background-size: cover;
        overflow-y:scroll;
    }
</style>


<div class="productList">
    <h2 class="text-center">Products</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-warning" })
    </p>

    @{
        int i = 0;
        var length = Model.Count();
        if (length != 0)
        {
            <table class="table table-striped table-hover" style="background-color: rgb(245 153 194 / 71%);">

                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.user.firstName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.productName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.description)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.price)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.stockQuantity)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.image_name)</th>
                    <th scope="col"></th>
                </tr>



                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.user.firstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.productName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.stockQuantity)
                        </td>
                        <td>
                            <img src="@ViewBag.ImageData[i]" width="50" height="50" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.productId }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Details", "Details", new { id = item.productId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.productId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    i++;
                }
            </table>

        }
        else
        {
            <h2>No Data Found</h2>
        }                         
    }
 </div>
